{
  "version": 2,
  "builds": [
    { "src": "api/**/*.{js,ts}", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "client/dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ],
  "framework": null,
  "env": {
    "ZERION_API_KEY": "@zerion_api_key"
  }
}


